<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp">

    <include layout="@layout/dialog_item_header" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:paddingBottom="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <com.example.lkacmf.view.BaseTextView
                    style="@style/BaseTextView"
                    app:header_title="工件类别 " />
            <com.example.lkacmf.util.nicespinner.NiceSpinner
                    android:id="@+id/nsWorkpieceType"
                    style="@style/NiceSpinner"
                    android:layout_margin="16dp"
                    app:textTint="@color/white"
                    app:arrowTint="@color/white"/>

            <com.example.lkacmf.view.BaseTextView
                    style="@style/BaseTextView"
                    app:header_title="工件形式" />
            <com.example.lkacmf.util.nicespinner.NiceSpinner
                    android:id="@+id/nsWorkpieceFrom"
                    style="@style/NiceSpinner"
                    android:layout_margin="16dp"
                    app:textTint="@color/white"
                    app:arrowTint="@color/white"/>

            <com.example.lkacmf.view.BaseTextView
                    style="@style/BaseTextView"
                    app:header_title="工件材质" />
            <com.example.lkacmf.util.nicespinner.NiceSpinner
                    android:id="@+id/nsWorkpieceQuality"
                    style="@style/NiceSpinner"
                    android:layout_margin="16dp"
                    app:textTint="@color/white"
                    app:arrowTint="@color/white"/>

            <com.example.lkacmf.view.BaseTextView
                    style="@style/BaseTextView"
                    app:header_title="工件厚度" />
            <EditText
                    android:id="@+id/etThickness"
                    style="@style/EditText"
                    android:inputType="number|numberDecimal"
                    android:layout_width="match_parent" />

            <com.example.lkacmf.view.BaseTextView
                    style="@style/BaseTextView"
                    app:header_title="焊缝宽度" />
            <EditText
                    android:id="@+id/etWidth"
                    style="@style/EditText"
                    android:inputType="number|numberDecimal"
                    android:layout_width="match_parent" />

            <com.example.lkacmf.view.BaseTextView
                    style="@style/BaseTextView"
                    app:header_title="工作温度" />
            <EditText
                    android:id="@+id/etHeat"
                    style="@style/EditText"
                    android:inputType="number|numberDecimal"
                    android:layout_width="match_parent" />

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

            <com.example.lkacmf.view.BaseButton
                    android:id="@+id/btnConfigCancel"
                    style="@style/BaseButton"
                    android:layout_width="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="@string/btn_cancel"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp" />

            <com.example.lkacmf.view.BaseButton
                    android:id="@+id/btnConfigSure"
                    style="@style/BaseButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/btn_sure"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp" />

            <com.example.lkacmf.view.BaseButton
                    android:id="@+id/btnConfigSave"
                    style="@style/BaseButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/save"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>