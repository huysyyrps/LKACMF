<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingDefaultResource">

    <include layout="@layout/dialog_item_header" />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            app:cardCornerRadius="5dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:gravity="top|left"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:text="设备暂无激活，请确认是否激活"
                android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

        <com.example.lkacmf.view.BaseButton
                android:id="@+id/btnNoActivationCancel"
                style="@style/BaseButton"
                android:layout_width="0dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="@string/btn_cancel"
                app:bg_color="@color/theme_color"
                app:bg_corner="5dp" />

        <com.example.lkacmf.view.BaseButton
                android:id="@+id/btnNoActivationSure"
                style="@style/BaseButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/btn_sure"
                app:bg_color="@color/theme_color"
                app:bg_corner="5dp" />
    </LinearLayout>
</LinearLayout>