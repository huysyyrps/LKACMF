<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/theme_back_color"
        android:orientation="vertical"
        tools:context=".activity.MainActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="41dp"
            android:orientation="horizontal">



        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="30dp"
                android:orientation="vertical">

            <com.example.lkacmf.view.BaseTextView
                    style="@style/BaseTextView"
                    app:header_title="探头选择 " />
            <TextView
                    android:id="@+id/tvProbeSelect"
                    style="@style/EditText"
                    android:layout_width="match_parent" />

            <com.example.lkacmf.view.BaseTextView
                    style="@style/BaseTextView"
                    app:header_title="探头频率" />

            <TextView
                    android:id="@+id/tvProbeRate"
                    style="@style/EditText"
                    android:layout_width="match_parent" />

            <com.example.lkacmf.view.BaseTextView
                    style="@style/BaseTextView"
                    app:header_title="探头激励" />

            <TextView
                    android:id="@+id/tvProbeNumb"
                    style="@style/EditText"
                    android:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="30dp"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/test1" />

        </LinearLayout>
    </LinearLayout>

    <com.example.lkacmf.view.BaseButton
            android:id="@+id/btnRecommend"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:bg_corner="10dp"
            android:text="校准"/>

</LinearLayout>