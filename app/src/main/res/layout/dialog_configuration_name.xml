<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp">

    <include layout="@layout/dialog_item_header" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:paddingBottom="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <com.example.lkacmf.view.BaseTextView
                    style="@style/BaseTextView"
                    app:header_title="工件厚度" />
            <EditText
                    android:id="@+id/etConfigName"
                    style="@style/EditText"
                    android:layout_height="100dp"
                    android:gravity="left|top"
                    android:padding="5dp"
                    android:hint="请输入当前按配置名称，默认为当前时间"
                    android:layout_width="match_parent" />

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

            <com.example.lkacmf.view.BaseButton
                    android:id="@+id/btnConfigNameCancel"
                    style="@style/BaseButton"
                    android:layout_width="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="@string/btn_cancel"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp" />

            <com.example.lkacmf.view.BaseButton
                    android:id="@+id/btnConfigNameSure"
                    style="@style/BaseButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/btn_sure"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>